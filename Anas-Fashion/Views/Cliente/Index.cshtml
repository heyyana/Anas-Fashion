@model IEnumerable<ClienteModel>

<div class="container">
	<div class="d-flex justify-content-between align-items-center mb-5">
		<h1>Cliente</h1>
		<a class="btn btn-success mx-2" asp-controller="Cliente" asp-action="Cadastrar">Cadastrar novo cliente</a>
	</div>


	<table class="table table-stripped table-dark">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Nome</th>
				<th scope="col">Email</th>
				<th scope="col">Telefone</th>
				<th scope="col">CPF</th>
				<th scope="col">Endereço</th>
				<th scope="col">Ações</th>
			</tr>
		</thead>
		<tbody>
			@if (Model != null)
			{
				@foreach (var cliente in Model)
				{
					<tr>
						<th scope="row">@cliente.Id</th>
						<td>@cliente.Nome</td>
						<td>@cliente.Email</td>
						<td>@cliente.Telefone</td>
						<td>@cliente.CPF</td>
						<td>@cliente.Endereco</td>
						<td>
							<a asp-controller="Cliente" asp-action="Editar" asp-route-id="@cliente.Id" class="btn btn-warning mx-2">Editar</a>
							<a asp-controller="Cliente" asp-action="Excluir" asp-route-id="@cliente.Id" class="btn btn-danger mx-2">Excluir</a>
						</td>
					</tr>
				}
			}
			else
			{
				<tr><td><strong>Nenhum Cliente foi encontrado!</strong></td></tr>
			}
		</tbody>
	</table>
</div>

@{

}